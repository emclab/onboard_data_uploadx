<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<%= simple_form_for @search_stat_config, :as => :search_stat_config, :url => search_stat_configs_path do |f| %>    
 
  <%= f.input :engine_id, :label => t('Engine Name'), :collection => @engines, :label_method => :name, :value_method => :id, :include_blank => true if @engine.blank? %> 
  <%= f.input :engine_name, :label => t('Engine Name'), :input_html => {:value => @engine.name} if @engine.present? %> 
  <%= f.input :engine_id, :as => :hidden, :input_html => {:value => @engine.id} if @engine.present? %>
  <%= f.input :config_desp, :label => t('Config Desp'), :input_html => {:rows => 2, :value => @copy_from.config_desp} %> 
  <%= f.input :resource_name, :label => t('Resource Name'), :input_html => {:value => @copy_from.resource_name} %>
  <%= f.input :stat_function, :label => t('Stat Function'), :input_html => {:rows => 10, :value => @copy_from.stat_function} %> 
  <%= f.input :stat_summary_function, :label => t('Stat Summary Function'), :input_html => {:rows => 10, :value => @copy_from.stat_summary_function} %> 
  <%= f.input :labels_and_fields, :label => t('Labels/Fields'), :input_html => {:rows => 10, :value => @copy_from.labels_and_fields} %>   
  <%= f.input :time_frame, :label => t('Time Frame'), :input_html => {:value => @copy_from.time_frame} %>
  <%= f.input :search_list_form, :label => t('List Form Name'), :input_html => {:value => @copy_from.search_list_form} %>
  <%= f.input :search_where, :label => t('Search Where'), :input_html => {:rows => 10, :value => @copy_from.search_where} %> 
  <%= f.input :search_results_period_limit, :label => t('Seach Results Period Limit'), :input_html => {:rows => 2, :value => @copy_from.search_results_period_limit} %> 
  <%= f.input :stat_header, :label => t('Stat Header'), :input_html => {:value => @copy_from.stat_header} %>
  <%= f.input :search_params, :label => t('Search Params'), :input_html => {:rows => 10, :value => @copy_from.search_params} %>
  <%= f.input :search_summary_function, :label => t('Search Summary Function'), :input_html => {:rows => 2, :value => @copy_from.search_summary_function} %> 
  <%= f.input :brief_note, :label => t('Brief Note'), :input_html => {:rows => 2, :value => @copy_from.brief_note} %> 
  
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save') , :class => BUTTONS_CLS['action'] %>  
<% end %>  

<% end %>


