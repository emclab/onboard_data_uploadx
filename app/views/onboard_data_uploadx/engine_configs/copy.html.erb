<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<%= simple_form_for @engine_config, :as => :engine_config, :url => engine_configs_path do |f| %>
 
  <%= f.input :engine_name, :label => t('Engine Name'), :readonly => true, :input_html => {:value => @engine.name} %> 
  <%= f.input :engine_id, :label => t('New Engine Name'), :collection => @engines, :label_method => :name, :value_method => :id, :include_blank => true %> 
  <%= f.input :argument_desp, :label => t('Argument Desp'), :input_html => {:rows => 2, :value => @copy_from.argument_desp} %> 
  <%= f.input :argument_name, :label => t('Argument Name'), :input_html => {:value => @copy_from.argument_name} %>
  <%= f.input :engine_version, :label => t('Engine Version'), :input_html => {:value => @copy_from.engine_version} %> 
  <%= f.input :argument_value, :label => t('Argument Value'), :input_html => {:rows => 20, :value => @copy_from.argument_value} %>   
  <%= f.input :global, :label => t('Global'), :collection => [[t('Yes'), true], [t('No'), false]], :include_blank => true, :input_html => {:value => @copy_from.argument_desp} %> 
  <%= f.input :brief_note, :label => t('Brief Note'), :input_html => {:rows => 2, :value => @copy_from.brief_note } %> 
  
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save') , :class => BUTTONS_CLS['action'] %>  
<% end %>  

<% end %>