                          :id => 'new_log_link', :class => BUTTONS_CLS['action'] if has_action_right?('create_engine_config', 'commonx/logs') %>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  		  <%= link_to t('Delete'), engine_config_path(@engine_config), :method => :delete, :confirm => I18n.t('Delete the record?'), :class => BUTTONS_CLS['action'] if has_action_right?('destroy', params[:controller], @engine_config) %>
   		</th>
	  </tr>
	</table> 
</div>

<% end %>
