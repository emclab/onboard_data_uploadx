<% if @view_in_config && @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
<% else %>
<div id="main_body">

<h1><%=@title %></h1>

<p>
  <b><%=t('Submit Date')%></b>
  <%= @engine_config.created_at.strftime('%Y/%m/%d') %>
</p>
<p>
  <b><%=t('Engine Name')%></b>
  <%= @engine_config.engine_name %>
</p>
<p>
  <b><%=t('Argument Desp') %></b>
  <%= @engine_config.argument_desp %>
</p>
<p>
  <b><%=t('Argument Name') %></b>
